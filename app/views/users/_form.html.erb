<% if @user.errors.any? %>
  <h2> The following errors prevented from editing the user: </h2>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <p>
  <%= f.label "Your full name:" %><br>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label "Your Username:" %><br>
  <%= f.text_field :handle %>
  </p>

  <p>
  <%= f.label "Your description:" %><br>
  <%= f.text_area :bio %>
  </p>

  <p>
  <%= f.label "Your email:" %><br>
  <%= f.text_field :email %>
  </p>

  <p>
  <%= f.submit "Update User" %>
  </p>
<% end %>